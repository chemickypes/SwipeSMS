

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout android:id="@+id/set_default_sms_layout" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:background="@color/open_view_color_red"
        android:visibility="gone">

        <Button android:id="@+id/set_default_sms_button" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentRight="true"
            android:layout_centerVertical="true" android:layout_margin="@dimen/standard_margin"
            android:text="@string/choose_sms_app"
            android:fontFamily="sans-serif-light"/>

        <TextView android:id="@+id/set_default_sms_textview" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/standard_margin" android:layout_toLeftOf="@+id/set_default_sms_button"
            android:text="@string/set_default_sms_text"
            android:fontFamily="sans-serif-light"/>

    </RelativeLayout>

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.baraccasoftware.swipesms.app.MainActivity"
        tools:ignore="MergeRootFrame"
    >


    </FrameLayout>

    </LinearLayout>